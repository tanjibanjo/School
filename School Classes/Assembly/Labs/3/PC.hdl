/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Inc16(in=x,out=incd);

	Mux16(a=x,b=incd,sel=inc,out=w);

	Mux16(a=w,b=in,sel=load,out=y);

	Mux16(a=y,b[0..15]=false,sel=reset,out=z);
	
	Register(in=z,load=true,out=out,out=x);
}